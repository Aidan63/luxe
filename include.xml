<?xml version="1.0" encoding="utf-8"?>
<extension>

	<haxelib name="format" />
	<haxelib name="lime" />

	<templatePath name="templates" />

    <haxedef name="DHXCPP_STACK_TRACE" if="profiler" />
    <haxedef name="HXCPP_STACK_LINE" if="profiler" />
    <haxedef name="HXCPP_CHECK_POINTER" if="profiler"/>

	<haxedef name="luxe_html5" if="html5" />
	<haxedef name="luxe_native" if="native" />

	<sample path="template_projects" />

		<!-- Built in resources and data -->
	<haxeflag name="-resource" value="version@version" />
	<haxeflag name="-resource" value="build@build" />
		<!-- UI and fonts -->
	<haxeflag name="-resource" value="luxe/defaults/ui/tiny.ui.png@tiny.ui" />
	<haxeflag name="-resource" value="luxe/defaults/fonts/din.png@din.png" />
	<haxeflag name="-resource" value="luxe/defaults/fonts/din.fnt@din.fnt" />
		<!-- Shaders -->
	<haxeflag name="-resource" value="phoenix/defaults/shaders/vert.glsl@default.vert.glsl" />
	<haxeflag name="-resource" value="phoenix/defaults/shaders/frag.glsl@default.frag.glsl" />
	<haxeflag name="-resource" value="phoenix/defaults/shaders/frag.textured.glsl@default.frag.textured.glsl" />

    <section if="setup">
        
        <haxelib name="format" />
            
    </section>
	
</extension>
